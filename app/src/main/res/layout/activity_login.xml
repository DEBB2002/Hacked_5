<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

   <ImageView
       android:id="@+id/image_icon"
       android:layout_width="180dp"
       android:layout_height="180dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:src="@drawable/img_log"></ImageView>


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
      android:layout_below="@id/image_icon"
      android:layout_marginTop="20dp"
      android:textSize="30sp"
      android:text="Login"
      android:layout_marginLeft="20dp"
      android:id="@+id/txt1"
      android:textColor="@color/black"
/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
android:layout_below="@id/txt1"
      android:layout_marginLeft="20dp"
      android:text="Get into your Account"
      android:textSize="15sp"
      android:layout_marginTop="5dp"
      android:id="@+id/txt2"/>
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="50dp"
      android:layout_below="@id/txt2"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="20dp"
       android:id="@+id/emailcard"
       android:elevation="5dp"
      app:cardCornerRadius="12dp">

      <EditText
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:background="@color/white"
         android:padding="5dp"
         android:hint="Email / Phone / UserName"/>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="50dp"
      android:layout_below="@id/emailcard"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="20dp"
       android:elevation="5dp"
       android:id="@+id/passwordcard"
       app:cardCornerRadius="12dp">


      <EditText
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/white"
          android:padding="5dp"
          android:hint="Password"/>

   </androidx.cardview.widget.CardView>

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/log_btn"
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:layout_below="@id/passwordcard"
       android:layout_marginHorizontal="20dp"
       android:layout_marginTop="35dp"
       android:background="@drawable/button"
       android:text="Login"

       android:textColor="@color/white" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
   android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_below="@id/log_btn"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:id="@+id/linear1"
   android:weightSum="1">

   <View
       android:layout_width="0dp"
       android:layout_height="1dp"
      android:layout_gravity="center"
       android:padding="2dp"
      android:layout_weight="0.45"
      android:background="@color/black"
       android:layout_marginRight="5dp"
   />
   <TextView
       android:layout_width="0dp"
       android:layout_height="wrap_content"
      android:text="Or"
      android:layout_weight="0.1"
      android:textAlignment="center"
      android:padding="2dp"/>
   <View
       android:layout_width="0dp"
       android:layout_height="1dp"
       android:layout_gravity="center"
       android:padding="2dp"
       android:layout_weight="0.45"
       android:background="@color/black"
       android:layout_marginLeft="5dp"
       />
</LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:layout_centerHorizontal="true"
   android:layout_below="@id/linear1"
   android:layout_marginTop="5dp"
   android:textSize="15sp"
   android:text="Don't Have a Account?Create One"
   android:textColor="@color/black"/>
</RelativeLayout>